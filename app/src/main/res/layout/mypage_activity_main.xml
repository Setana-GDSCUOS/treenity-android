<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_lottie_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@xml/map_loading_bg">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="1.0" />

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryVariant"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"

                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="20dp"
                        android:text="My Page"
                        android:textColor="@color/white"

                        android:textSize="20sp"

                        />

                    <ImageView
                        android:id="@+id/userprofile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:background="@xml/loading_registration_imageview_bg"
                        android:padding="8dp"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:id="@+id/username"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:text="{이름}"
                        android:textColor="@color/white"
                        android:textSize="25sp"

                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="340dp"
                    android:layout_marginTop="30dp"

                    android:background="@drawable/ic_baseline_settings_24"

                    android:elevation="5dp" />

                <TextView
                    android:id="@+id/store"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="285dp"
                    android:layout_marginTop="30dp"

                    android:background="@drawable/ic_baseline_storefront_24"

                    android:elevation="5dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryVariant"
                android:padding="20dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/mypage_custom_small_box"
                            android:gravity="center|top"
                            android:paddingVertical="7dp"
                            android:text="Point"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="27dp"

                                android:background="@drawable/mypage_point" />

                            <TextView
                                android:id="@+id/point"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="10dp"
                                android:text="{P}"
                                android:textColor="@color/black"

                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/mypage_custom_small_box"
                            android:gravity="center|top"
                            android:paddingVertical="7dp"
                            android:text="Bucket"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="27dp"

                                android:background="@drawable/mypage_pail" />

                            <TextView
                                android:id="@+id/bucket"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="10dp"
                                android:text="{P}"
                                android:textColor="@color/black"

                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/mypage_custom_small_box"
                            android:gravity="center|top"
                            android:paddingVertical="7dp"
                            android:text="Step"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="27dp"

                                android:background="@drawable/mypage_step" />

                            <TextView
                                android:id="@+id/dailyWalk"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="10dp"
                                android:text="{P}"
                                android:textColor="@color/black"

                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="@drawable/mypage_tree_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/comfortaa_bold"

                    android:text="My Tree"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/item_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"

                        android:layout_marginTop="80dp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="@drawable/mypage_walking_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/comfortaa_bold"

                    android:text="My Walklog"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:orientation="vertical"

                    >

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:padding="10dp" />


                </LinearLayout>
            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="75 minutes a week of brisk walking can add almost 2 years to your life"
                    android:textAlignment="center"
                    android:textSize="14sp" />
                    <!--android:textColor="#000000"안보여요 밤에!-->


            </FrameLayout>


        </LinearLayout>

    </ScrollView>
</FrameLayout>


