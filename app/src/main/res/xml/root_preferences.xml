<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Basics"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="signature"
            app:title="Your Signature"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/mypage_settings_name_icon"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Advanced"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:summary="Click to Switch On or Off"
            android:title="Push Alarm"
            app:key="switch"
            app:icon="@drawable/mypage_settings_alarm_icon"/>

        <SwitchPreference
            android:defaultValue="false"
            android:summary="Swipe to confirm your permission"
            android:title="Physical Activity Check"
            app:key="permission"
            app:icon="@drawable/mypage_walking_icon"/>

    </PreferenceCategory>

</PreferenceScreen>